<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="ProductoPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Clases de entidad -->
        <class>Practica6.Producto</class>
        <class>Practica6_2_1.BankingTransaction1</class>
        <class>Practica6_2_1.CashTransaction1</class>
        <class>Practica6_2_1.StockTransaction1</class>
        <class>Practica6_2_2.BankingTransaction2</class>
        <class>Practica6_2_2.CashTransaction2</class>
        <class>Practica6_2_2.StockTransaction2</class>

        <properties>
            <!-- Configuración JDBC -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/indra_nov25"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <!-- Dialecto de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- Mostrar SQL en consola -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Generación del esquema -->
            <!-- <property name="hibernate.hbm2ddl.auto" value="update"/> -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>